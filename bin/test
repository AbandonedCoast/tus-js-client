#!/bin/bash
# Exit immediately if an error occurs without continuing
set -e

# Move into a known directory
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $DIR/..

# Run tests in Phantom browser and Node first
npm run phantom-test
npm run node-test

if [ "${CI}" = "true" ] && [ "${TRAVIS_PULL_REQUEST}" = "false" ];
then
  npm run zuul-test
else
  echo "Skipping zuul-test as this is not a master CI branch test run"
fi
